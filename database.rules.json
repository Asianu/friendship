// These rules grant access to a node matching the authenticated
// user's ID from the Firebase auth token
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "profiles": {
      ".read": "auth!=null",
      ".write": "auth!=null"
    },
    "mentors": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "activities": {
      ".read": true,
      ".write": false
    },
    "mentor_list": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "mentee_list": {
      ".read": "auth != null",
      ".write": "auth != null",
    }
  }
}